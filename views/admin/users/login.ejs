<%- include('../../partials/header')%>
    
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
               <h2>Login de admin</h2>
            </div>
            <div class="card-body">
                <form action="/authenticate" method="POST">
                    <label for="email">E-mail</label>
                    <input class="form-control" type="email" id="email" name="email" placeholder="email@hotmail.com">
                    <label for="password">Senha</label>
                    <input class="form-control" type="password" id="password" name="password" placeholder="digite sua senha">
                    <br>
                    <button class="btn btn-success btn-block">Logar</button>
                    <a href="/" class="btn btn-dark btn-block btn-sm">Voltar</a>
                </form>
            </div>
        </div>
    </div>

<%- include('../../partials/footer')%>