<%- include('../../partials/header')%>
<%- include('../../partials/homeNavbar')%>

<body>
    
    <div class="container col-8">
        <hr>
        <% result.articles.rows.forEach(article => { %>
           <div class="card">
                <div class="card-header">
                    <%= article.title %>
                </div>
                
                <div class="card-body">
                    <a href="<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>   
            </div>
            <br>
       <% }) %>

        <div class="row">
            <div class="col">

                <% if(result.page > 2) { %>
                    <a class="btn btn-primary btn-sm" href="/articles/page/<%= result.page - 1 %>">&lt&lt Prev</a>
                <% } else if(result.page == 2) { %>
                    <a class="btn btn-primary btn-sm" href="/">&lt&lt Prev</a>
                <% } %>


                <% if(result.next) { %>
                    <a style="float: right;" class="btn btn-primary btn-sm" href="/articles/page/<%= result.page + 1 %>">Next >></a>
               <% } %>
            </div>
        </div>
        <hr/>

    </div>    
</body>

<%- include('../../partials/footer') %>